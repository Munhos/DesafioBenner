<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WpfApp.Views"
        Title="Sistema de Cadastros" Height="600" Width="800">
    <DockPanel>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray" Height="40">
            <Button Content="Pessoas" Click="PessoasScreenClick" Margin="5"/>
            <Button Content="Produtos" Click="ProdutosScreenClick" Margin="5"/>
            <Button Content="Pedidos" Click="PedidosScreenClick" Margin="5"/>
        </StackPanel>

        <ContentControl x:Name="MainContent"/>
    </DockPanel>
</Window>
