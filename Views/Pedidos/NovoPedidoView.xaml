<Window x:Class="WpfApp.Views.Pedidos.NovoPedidoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pedido" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">

    <Border Background="WhiteSmoke" Padding="10" CornerRadius="4">
        <StackPanel>
            <TextBlock Text="Preencha ou Edite os campos:" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Pessoa:"/>
            <TextBox Text="{Binding PessoaSelecionada.Nome}" IsReadOnly="True"/>

            <TextBlock Text="Produtos:" Margin="0,6,0,0"/>
            <ListBox x:Name="ProdutosListBox"
                     ItemsSource="{Binding ProdutosDisponiveis}"
                     SelectionMode="Multiple"
                     DisplayMemberPath="Nome"
                     Height="120"
                     SelectionChanged="ProdutosListBox_SelectionChanged"/>

            <TextBlock Text="Valor Total:" Margin="0,6,0,0"/>
            <TextBox Text="{Binding ValorSelecionados, Mode=OneWay, StringFormat=C}" IsReadOnly="True"/>

            <TextBlock Text="Forma de Pagamento:" Margin="0,6,0,0"/>
			<ComboBox ItemsSource="{Binding FormasPagamentoPossiveis}" SelectedItem="{Binding FormaPagamento}"/>

			<TextBlock Text="Status:" Margin="0,6,0,0"/>
			<ComboBox ItemsSource="{Binding TodosStatus}" SelectedItem="{Binding StatusEdicao}"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Salvar" Width="80" Margin="0,0,8,0" Command="{Binding AdicionarOuAtualizarCommand}"/>
                <Button Content="Cancelar" Width="80" Click="Cancelar_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
