<UserControl x:Class="WpfApp.Views.PedidoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Margin="0 0 0 10">
			<StackPanel Orientation="Vertical" Margin="0 0 10 0">
				<TextBlock Text="Pessoa:" VerticalAlignment="Center" Margin="0 0 10 0"/>
				<ComboBox Width="250"
                          ItemsSource="{Binding Pessoas}"
                          SelectedItem="{Binding PessoaSelecionada}"
                          DisplayMemberPath="Nome"/>
			</StackPanel>

			<StackPanel Orientation="Vertical" Margin="0 0 10 0">
				<TextBlock Text="Status:" VerticalAlignment="Center" Margin="0 0 10 0"/>
				<ComboBox Width="250"
                          ItemsSource="{Binding TodosStatus}"
                          SelectedItem="{Binding StatusFiltro, Mode=TwoWay}"
                          IsEditable="False"/>
			</StackPanel>
		</StackPanel>

		<DataGrid Grid.Row="1"
                  ItemsSource="{Binding PedidosFiltrados}"
                  SelectedItem="{Binding PedidoSelecionado}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowHeight="30"
                  GridLinesVisibility="Horizontal">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Data" Binding="{Binding DataVenda}" Width="*"/>
				<DataGridTextColumn Header="Forma Pagamento" Binding="{Binding FormaPagamento}" Width="*"/>
				<DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
				<DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=C}" Width="*"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
			<TextBlock Text="Total:" VerticalAlignment="Center" Margin="0 0 10 0"/>
			<TextBlock Text="{Binding ValorTotal, Mode=OneWay, StringFormat=C}"
                       FontWeight="Bold" VerticalAlignment="Center"/>

			<Button Content="Adicionar Pedido" Command="{Binding AdicionarPedidoCommand}" Margin="10 0 0 0"/>
			<Button Content="Editar Pedido" Command="{Binding EditarPedidoCommand}" Margin="10 0 0 0"/>
			<Button Content="Excluir Pedido"
                    Command="{Binding ExcluirPedidoCommand}"
                    CommandParameter="{Binding PedidoSelecionado}"
                    Margin="10 0 0 0"/>
		</StackPanel>
	</Grid>
</UserControl>
